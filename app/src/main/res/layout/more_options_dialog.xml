<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/btn_Texts"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Texts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Tracking Texts"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Texts"
        app:layout_constraintEnd_toStartOf="@+id/btn_Texts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_Texts" />

    <ToggleButton
        android:id="@+id/btn_Calls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_Texts"
        app:layout_constraintStart_toStartOf="@+id/btn_Texts"
        app:layout_constraintTop_toBottomOf="@+id/btn_Texts" />

    <TextView
        android:id="@+id/txt_Calls"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Tracking Calls"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Calls"
        app:layout_constraintEnd_toStartOf="@+id/btn_Calls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_Calls" />

    <ToggleButton
        android:id="@+id/btn_GPS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_Calls"
        app:layout_constraintStart_toStartOf="@+id/btn_Calls"
        app:layout_constraintTop_toBottomOf="@+id/btn_Calls" />

    <TextView
        android:id="@+id/txt_GPS"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Tracking Location"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_GPS"
        app:layout_constraintEnd_toStartOf="@+id/btn_GPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_GPS" />

    <EditText
        android:id="@+id/editLogname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/btn_GPS"
        app:layout_constraintStart_toStartOf="@+id/btn_GPS"
        app:layout_constraintTop_toBottomOf="@+id/btn_GPS" />

    <TextView
        android:id="@+id/txt_logname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Change Log Name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/editLogname"
        app:layout_constraintEnd_toStartOf="@+id/editLogname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editLogname" />

    <EditText
        android:id="@+id/editLocationPingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/editLogname"
        app:layout_constraintStart_toStartOf="@+id/editLogname"
        app:layout_constraintTop_toBottomOf="@+id/editLogname" />

    <TextView
        android:id="@+id/txt_LocationPingTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Seconds Between GPS points"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/editLocationPingTime"
        app:layout_constraintEnd_toStartOf="@+id/editLocationPingTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editLocationPingTime" />

</android.support.constraint.ConstraintLayout>